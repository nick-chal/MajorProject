  <section id="login">
    <div class="container">
      <div class="firstnick">
          <% if(error && error.length>0 ){%>
        <div class="alert alert-danger" role="alert">
            <%= error%>
        </div>
          <%}else if(success && success.length>0){%>
        <div class="alert alert-success" role="alert">
            <%= success%>
        </div>
          <%}%>
      </div>
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card text-dark my-3">
            <div class="card-header">
              <h4>Upload Your File</h4>
            </div>
            <div class="card-body">
              <form id="uploadForm" action="/upload" enctype="multipart/form-data" method="post">
                <div class="form-group">
                  <label for="filename">Select Your File</label>
                  <div class=""><input REQUIRED oninvalid="this.setCustomValidity('Please select a file')" oninput="setCustomValidity('')" class="form-control" type="File" placeholder="FileUpload" name="filename"> </div>
                  <div class="form-group">
                    <label for="description" id="descForm">Description</label>
                    <textarea id="textForm" class="form-control" placeholder="Write about the file" name="description" form="uploadForm" maxlength="50"></textarea>
                  </div>


                  <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>





                  <!-- <a href="home.html"class="btn btn-primary btn-block">Login</a> -->
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

